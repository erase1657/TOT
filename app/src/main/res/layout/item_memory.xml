<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_memory"
    android:layout_height="wrap_content"

    android:layout_width="match_parent"
    android:layout_marginHorizontal="50dp"

    android:layout_marginTop="12dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#E5E6FF">

    <!--
    가로를 화면 비율로 변경
    - android:layout_width="match_parent"
    - android:layout_marginHorizontal="50dp"
    + android:layout_width="0dp"
    + app:layout_constraintWidth_percent="0.7"
    + app:layout_constraintStart_toStartOf="parent"
    + app:layout_constraintEnd_toEndOf="parent"
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- 제목 -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            tools:text="제목" />

        <!-- 날짜 -->
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2025.10.15"
            android:textSize="14sp"
            android:textColor="@color/black"
            tools:text="2025.10.15" />

        <!-- 위치 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_location_point"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/location_point"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room 6-205"
                android:textColor="@color/gray"
                android:textSize="13sp"
                tools:text="Room 6-205" />
        </LinearLayout>

        <!-- 시간 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="12:00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="–"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:05"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="13:05" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
