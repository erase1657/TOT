<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 배경 이미지 + 로그아웃/뒤로가기 버튼 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample3"
                android:contentDescription="배경 이미지" />

            <!-- 뒤로가기 버튼 (타인 프로필 볼 때만 표시) -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기"
                android:visibility="gone" />

            <!-- 로그아웃 버튼 (내 프로필 볼 때만 표시) -->
            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="로그아웃"
                android:visibility="visible" />
        </RelativeLayout>

        <!-- 프로필 이미지 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="-60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_default"
                android:elevation="3dp"
                app:civ_border_width="3dp"
                app:civ_border_color="#E5E7EB" />
        </FrameLayout>

        <!-- 닉네임 + 수정/팔로우 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- 수정 버튼 (내 프로필 볼 때만 표시) -->
            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="수정"
                android:visibility="visible" />

            <!-- 팔로우 버튼 (타인 프로필 볼 때만 표시) -->
            <ImageView
                android:id="@+id/btn_follow_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_user_add"
                android:contentDescription="팔로우"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 상태 메시지 -->
        <TextView
            android:id="@+id/tv_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="상태메시지"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp" />

        <!-- 위치 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_place"
                android:tint="#000000" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 정보 없음"
                android:textSize="13sp"
                android:layout_marginStart="4dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 팔로우 상태 텍스트 (타인 프로필 볼 때만 표시) -->
        <TextView
            android:id="@+id/tv_follow_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:background="@drawable/button_style2"
            android:text="팔로우 중"
            android:textColor="#6366F1"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- 팔로워 / 팔로잉 / 게시물 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/follower_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#6366F1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로워"
                    android:textSize="13sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/following_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#6366F1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로잉"
                    android:textSize="13sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/tv_posts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#6366F1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시물"
                    android:textSize="13sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#E5E7EB" />

        <!-- 여행 기록 타이틀 -->
        <TextView
            android:id="@+id/tv_travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="나의 여행 기록"
            android:textColor="#6366F1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- 여행 스케줄 없을 때 -->
        <LinearLayout
            android:id="@+id/layout_no_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행 기록이 없습니다 ✈️"
                android:textColor="#999999"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- 여행 스케줄 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_travels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="8dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false" />

    </LinearLayout>
</ScrollView>