<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFFFF"
    android:clickable="true"
    android:focusable="true">

    <!-- 프로필 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:civ_border_width="0dp"
            android:clickable="true"
            android:focusable="true" />
        <!-- ✅ android:src 제거 (코드에서만 설정) -->

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text=" "
            android:textColor="#FF000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:clickable="true"
            android:focusable="true" />

        <!-- ✅ 팔로우 버튼 추가 (초기값: "팔로우" + Primary 스타일) -->
        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로우"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_follow_button_primary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 게시글 제목 -->
    <TextView
        android:id="@+id/txt_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="#FF000000"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingExtra="2dp"/>

    <!-- 게시글 이미지 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img_post_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="게시글 이미지" />
    </androidx.cardview.widget.CardView>

    <!-- 좋아요 / 댓글 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="좋아요 버튼"/>

        <TextView
            android:id="@+id/txt_heart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.9만"
            android:textColor="#FF000000"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_comment"
            android:layout_marginEnd="4dp"
            android:contentDescription="댓글 아이콘"/>

        <TextView
            android:id="@+id/txt_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22개"
            android:textColor="#FF000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFE0E0E0"/>
</LinearLayout>
