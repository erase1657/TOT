<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:minHeight="88dp">

        <!-- 좌측 아이콘 컨테이너 -->
        <FrameLayout
            android:id="@+id/icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <!-- 시간 텍스트 (상단 우측) -->
        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9CA3AF"
            android:textSize="11sp"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 제목 텍스트 -->
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintEnd_toStartOf="@id/notification_time"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 내용 텍스트 -->
        <TextView
            android:id="@+id/notification_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textColor="#6B7280"
            android:textSize="11sp"
            android:lineSpacingExtra="1dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintEnd_toStartOf="@id/btn_follow_back_container"
            app:layout_constraintTop_toBottomOf="@id/notification_title" />

        <!-- 맞팔로우 버튼 -->
        <FrameLayout
            android:id="@+id/btn_follow_back_container"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_follow_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="맞팔로우"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:gravity="center"
                android:background="#000000"
                android:clickable="true"
                android:focusable="true" />
        </FrameLayout>

        <!-- 읽지 않은 메시지 뱃지 -->
        <FrameLayout
            android:id="@+id/unread_badge_container"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/unread_badge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#0F9687"
                android:includeFontPadding="false" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>