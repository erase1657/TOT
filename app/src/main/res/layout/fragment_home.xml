<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- ìˆ˜ì‹ í•¨ ì•„ì´ì½˜ -->
        <FrameLayout
            android:id="@+id/inbox_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/inbox_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_inbox"
                android:contentDescription="ìˆ˜ì‹ í•¨" />

            <!-- ë¯¸ì½ìŒ ë©”ì‹œì§€ ë°°ì§€ -->
            <TextView
                android:id="@+id/inbox_badge"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:translationX="6dp"
                android:translationY="-5dp"
                android:background="#FFFF4444"
                android:text="10+"
                android:textColor="#FFFFFFFF"
                android:textSize="9sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"
                android:gravity="center"
                android:minWidth="16dp"
                android:elevation="2dp"
                android:visibility="gone" />
        </FrameLayout>

        <!-- ì¤‘ì•™ íƒ€ì´í‹€ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Home"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- í”„ë¡œí•„ ì´ë¯¸ì§€ -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_profile_default"
            app:civ_border_width="2dp"
            app:civ_border_color="#E5E7EB"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- âœ… SwipeRefreshLayout ì¶”ê°€ -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ì½˜í…ì¸  ì˜ì—­ -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- ë‹¤ìŒ ìŠ¤ì¼€ì¤„ -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_memory"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:overScrollMode="never"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:clipToPadding="false" />

                <!-- ìŠ¤ì¼€ì¤„ ì—†ìŒ -->
                <LinearLayout
                    android:id="@+id/noScheduleSection"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ì¼ì •ì´ ì—†ìŠµë‹ˆë‹¤ ðŸ˜´"
                        android:textColor="#999999"
                        android:textSize="16sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- ì§€ì—­ í•„í„° -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scrollbars="none"
                    android:overScrollMode="never">
                    <LinearLayout
                        android:id="@+id/provinceButtonContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:id="@+id/cityScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/cityButtonContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFE0E0E0"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/re_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>