<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="35dp"
    android:paddingEnd="35dp"
    tools:context=".Authentication.FindAccountActivity">
    <Button
        android:id="@+id/btn_back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_back"
        android:layout_marginTop="?attr/actionBarSize"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="72dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/apptitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 찾고자하는 \n 아이디를 입력해주세요."/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="이메일"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_style2"
        android:drawableLeft="@drawable/ic_email"
        android:paddingStart="14dp"
        android:textAlignment="textStart"
        android:maxLines="1"
        android:hint="Ex: abc@example.com"
        android:drawablePadding="10dp"
        />
    <Button
        android:id="@+id/btn_findpassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/button_style2"
        android:backgroundTint="#575DFB"
        android:text="비밀번호 재설정"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>